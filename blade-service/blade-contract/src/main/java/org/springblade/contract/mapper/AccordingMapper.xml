<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.springblade.contract.mapper.AccordingMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="accordingResultMap" type="org.springblade.contract.entity.AccordingEntity">
        <result column="id" property="id"/>
        <result column="file_id" property="fileId"/>
        <result column="according_name" property="accordingName"/>
        <result column="upload_date" property="uploadDate"/>
        <result column="synch_date" property="synchDate"/>
        <result column="theme_context" property="themeContext"/>
        <result column="document_type" property="documentType"/>
        <result column="according_address" property="accordingAddress"/>
        <result column="use_status" property="useStatus"/>
        <result column="is_reused" property="isReused"/>
        <result column="status" property="status"/>
        <result column="is_deleted" property="isDeleted"/>
        <result column="create_user" property="createUser"/>
        <result column="create_time" property="createTime"/>
        <result column="update_user" property="updateUser"/>
        <result column="update_time" property="updateTime"/>
        <result column="create_dept" property="createDept"/>
    </resultMap>
    <!-- 通用查询结果列 -->
    <sql id="baseColumnList">
        id,
        file_id,
        according_name,
        upload_date,
        synch_date,
        theme_context,
        document_type,
        according_address,
        use_status,
        is_reused,
        status,
        is_deleted,
        create_user,
        create_time,
        update_user,
        update_time,
        create_dept
    </sql>
    <!-- 分页 -->
    <select id="pageList" resultMap="accordingResultMap">
        SELECT
            <include refid="baseColumnList"></include>
        FROM contract_according
        WHERE is_deleted = 0
    </select>
</mapper>
