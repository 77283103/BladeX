<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.springblade.contract.mapper.AccordingMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="accordingResultMap" type="org.springblade.contract.entity.AccordingEntity">
        <result column="id" property="id"/>
        <result column="according_name" property="accordingName"/>
        <result column="relation_contract_id" property="relationContractId"/>
        <result column="according_files" property="accordingFiles"/>
        <result column="remark" property="remark"/>
        <result column="management_dept" property="managementDept"/>
        <result column="management_unit" property="managementUnit"/>
        <result column="manager" property="manager"/>
        <result column="upload_time" property="uploadTime"/>
        <result column="is_reused" property="isReused"/>
        <result column="status" property="status"/>
        <result column="is_deleted" property="isDeleted"/>
        <result column="create_user" property="createUser"/>
        <result column="create_time" property="createTime"/>
        <result column="update_user" property="updateUser"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>
    <!-- 通用查询结果列 -->
    <sql id="baseColumnList">
        id,
        according_name,
        relation_contract_id,
        according_files,
        remark,
        management_dept,
        management_unit,
        manager,
        upload_time,
        is_reused,
        status,
        is_deleted,
        create_user,
        create_time,
        update_user,
        update_time
    </sql>
    <!-- 分页 -->
    <select id="pageList" resultMap="accordingResultMap">
        SELECT
            <include refid="baseColumnList"></include>
        FROM contract_according
        WHERE is_deleted = 0
        <if test="according.accordingName != null and according.accordingName != ''">
            AND according_name = #{according.accordingName}
        </if>
        <if test="according.uploadTime != null and according.uploadTime != ''">
            AND upload_time = #{according.uploadTime}
        </if>
    </select>
</mapper>
